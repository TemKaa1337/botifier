<?xml version="1.0" encoding="UTF-8"?>
<ruleset name="Botifier"
         xmlns="http://pmd.sf.net/ruleset/1.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://pmd.sf.net/ruleset/1.0.0 http://pmd.sf.net/ruleset_xml_schema.xsd">
    <rule ref="rulesets/codesize.xml"/>
    <rule ref="rulesets/controversial.xml"/>
    <rule ref="rulesets/design.xml"/>
    <rule ref="rulesets/unusedcode.xml"/>
    <exclude-pattern>*\Model\Request\*</exclude-pattern>
    <exclude-pattern>*\Model\Response\*</exclude-pattern>
    <exclude-pattern>*\Model\Shared\*</exclude-pattern>
    <exclude-pattern>*\Factory\Response\*</exclude-pattern>
    <exclude-pattern>*\Factory\Shared\*</exclude-pattern>

    <exclude-pattern>*/Model/Request/*</exclude-pattern>
    <exclude-pattern>*/Model/Response/*</exclude-pattern>
    <exclude-pattern>*/Model/Shared/*</exclude-pattern>
    <exclude-pattern>*/Factory/Response/*</exclude-pattern>
    <exclude-pattern>*/Factory/Shared/*</exclude-pattern>
</ruleset>
